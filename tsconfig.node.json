{
  "compilerOptions": {
    "target": "ES2020",                         // Target modern JavaScript
    "module": "CommonJS",                       // Use CommonJS for Node.js compatibility
    "rootDir": "./src",                         // Source folder for TypeScript files
    "outFile": "../app.js",                         // Output folder for compiled JavaScript files
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 1,
    "strict": true,                             // Enable all strict type-checking options
    "esModuleInterop": true,                    // Allow `import` statements with CommonJS modules
    "skipLibCheck": true,                       // Skip type checks on declaration files
    "forceConsistentCasingInFileNames": true,   // Enforce case-sensitive imports
    "resolveJsonModule": true,                  // Allow importing JSON files
    "moduleResolution": "node",                // Use Node.js module resolution
    "allowSyntheticDefaultImports": true,      // Support default imports from CommonJS modules
    "noImplicitAny": true,                     // Allow implicit `any` type
    "typeRoots": ["./node_modules/@types"],     // Include type definitions from node_modules
    "baseUrl": ".",                             // Base URL for module resolution
    "paths": {
      "*": ["node_modules/*"]                   // Path mappings for module resolution
    }
  },
  "include": ["src"],                           // Include files in the `src` folder
  "exclude": ["node_modules", "dist"]           // Exclude unnecessary folders
}
